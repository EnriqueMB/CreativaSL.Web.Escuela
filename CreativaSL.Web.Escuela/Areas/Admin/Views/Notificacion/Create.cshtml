@model CreativaSL.Web.Escuela.Models.NotificacionModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured
{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/assets2/plugins/cropper/cropper.min.css")" />

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Ofelia Narvaez Rincón<small>   Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Nuevo Horario</div>
                    </div>
                    @using (Html.BeginForm("Create", "Notificacion", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.IDNotificacion)

                        <div class="portlet-body form">
                            <h3 class="form-section">Información del Horario</h3>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Nombre Alumno<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.nombre, new { id = "nombre", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.nombre)
                                            <span class="help-bolck">Ingrese el Nombre</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Materia<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.Materia, new { id = "materia", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Materia)
                                            <span class="help-bolck">Ingrese el apellido paterno</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Fecha Hora Fin<span class="required"> *</span></label>
                                        <div class="controls">
                                            <div id="datetimepicker4" class="input-append date calendar">
                                                @Html.TextBoxFor(model => model.fecha, "{0:dd/MM/yyyy}", new { id = "fecha", @class = "span12 m-wrap", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.fecha)
                                                <span class="add-on"><i data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span>
                                            </div>
                                            <span class="help-block">Ingrese la fecha de término del ciclo escolar</span>
                                        </div>
                                    </div>
                                </div>
                             
                            </div>
                            <div class="row-fluid">

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Notificación<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.cadena, new { id = "notificacion", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.cadena)
                                        </div>
                                    </div>
                                    <span class="help-block">Ingrese notificación</span>
                                </div>

                            </div>
                            <div class="form-actions">
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Index","Notificacion")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>

        jQuery(document).ready(function () {
            var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
       
        jQuery.validator.methods["date"] = function (value, element) { return true; }
    </script>

}













