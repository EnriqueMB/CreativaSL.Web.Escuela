                                                                            </div>
                                                                        </div>
                                                                        <span class="help-block">Ingrese título</span>
                                                                    </div>
                                                                    <div class="span3">
                                                                        <div class="control-group">
                                                                            <label class="control-label">Solo a Tutores<span class="required"> *</span></label>
                                                                            <div class="controls">
                                                                                @Html.CheckBoxFor(model => model.tutores)
                                                                                
                                                                              
                                                                            </div>
                                                                        </div>
                                                                       
                                                                    </div>
                                                                    

                                                                </div>
                                                                <div class="row-fluid">

                                                                    <div class="span12">
                                                                        <div class="control-group">
                                                                            <label class="control-label">Descripción de notificación<span class="required"> *</span></label>
                                                                            <div class="controls">
                                                                               @Html.TextAreaFor(model => model.texto, new { id = "texto", @class = "span12 m-wrap" })
                                                                            @Html.ValidationMessageFor(model => model.texto)
                                                                            </div>
                                                                        </div>
                                                                        <span class="help-block">Descripción de notificación</span>
                                                                    </div>
                                                                </div>
                                                                <div class="row-fluid">
                                                                    <table id="ListAlumnosXGrupo" class="table table-striped table-hover table-bordered dataTable"></table>
                                                                </div>
                                                                <div class="form-actions">
                                                                    <input type="submit" value="Guardar" class="btn green">
                                                                    <a href="@Url.Action("Index","Notificacion")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                                                                </div>
                                                            </div>
                                                        }
                                                        







                                                    </section>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="https://d3js.org/d3.v4.0.0-alpha.35.min.js"></script>
    <script>
       
        $(document).ready(function () {
           
            
            d3.select("#ListPlanEstudioOrigen option[value='-1']").raise();
            d3.select("#ListModalidadOrigen option[value='all']").raise();
            d3.select("#ListCicloOrigen option[value='all']").raise();

            $("#ListPlanEstudioOrigen").change(function () {
                var combo = $('#ListModalidadOrigen').attr('id');
                getComboModalidad($("#ListPlanEstudioOrigen").val(), combo);
                
                
            });
            $("#ListModalidadOrigen").change(function () {
                var combo = $('#ListEspecialidadOrigen').attr('id');
                getComboEspecialidad($("#ListModalidadOrigen").val(),combo);
            });
            $("#ListEspecialidadOrigen").change(function () {
                var combo = $('#ListCursosOrigen').attr('id');
                getComboCursos($("#ListEspecialidadOrigen").val(),combo);
            });
            $("#ListCursosOrigen").change(function () {
                var combo = $('#ListGrupoOrigen').attr('id');
                getComboGrupo($("#ListCicloOrigen").val(), $("#ListEspecialidadOrigen").val(), $("#ListCursosOrigen").val(),combo);
            });
            $("#ListGrupoOrigen").change(function () {
                getTablaAlumnos($("#ListGrupoOrigen").val());
            });



        });
        function getTablaAlumnos(grupo) {
            $.ajax({
                url: "/Admin/Notificacion/TablaAlumnosXGrupo",
                data: {
                    grupo: grupo


                },
                dataType: "json",
                type: "POST",
                error: function (xhr, ajaxOptions, thrownError, request) {
                    $("#ListGrupoOrigen").html('');

                    alert(xhr.status);
                    alert(thrownError);
                },
                success: function (tblAlumnosXGrupo) {
                    var items = "";
                    var cont = 0;
                    var contador = 0;
                    items += '<thead><tr><th>Seleccionado</th><th>Nombre</th></tr></thead><tbody >';
                    for (var i = 0; i < tblAlumnosXGrupo.length; i++) {

                        //items += "<option value=\"" + tblAlumnosXGrupo[i].IDPersona + "\">"  "</option>";
                        items += "<tr><td><input id='alumnos" + contador + "' type='checkbox' value=" + tblAlumnosXGrupo[i].IDPersona + " name='alumno-" + i + "' class='alumnos' data-name=" + tblAlumnosXGrupo[i].nombre + " checked/></td><td>" + tblAlumnosXGrupo[i].nombre + "</td></tr>";
                        cont++;
                        contador++;

                    }
                    //items += '<tr style="display:none"><td><input type="text" name="contAlumnos" id="numeroAlumnos"></td></tr>';
                    if (cont == 0) {

                        //for (var i = 0; i < 4; i++) {
                        //    items += "<tr><td><input id='alumnos" + contador + "' type='checkbox' value='Valor" + i + "' name='alumno-" + i + "' class='alumnos' data-name='soy el numero " + i + "' checked/></td><td>No hay alumnos en este grupo</td></tr>";
                        //    contador++;
                        //}

                        items += "<tr><td colspan='2'>No hay más alumnos en este grupo</td></tr>";

                    }
                    items += '<tr style="display:none"><td><input type="text" name="contAlumnos" id="numeroAlumnos"></td></tr>';
                    items += '</tbody>';

                    $("#ListAlumnosXGrupo").html(items);
                    var c = 0;
                    var contadorActivo = 0;
                    $(".alumnos").each(function () {
                        contadorActivo++;


                        $('#alumnos' + c).change(function () {
                            var contadorActivo = 0;
                            //if (!$(this).is(':checked')) {
                            //    var name = $(this).attr('data-name');
                            //    var r = confirm("¿"+name+" no ha aprobado el curso?");
                            //    if (r == true) {
                            //        $(this).prop("checked", false);
                            //    } else {
                            //        $(this).prop("checked", true);
                            //    }
                            //}
                            //else {
                            //    var name = $(this).attr('data-name');
                            //    var r = confirm("¿"+name+"  ha aprobado el curso?");
                            //    if (r == true) {
                            //        $(this).prop("checked", true);
                            //    } else {
                            //        $(this).prop("checked", false);
                            //    }
                            //}
                            $(".alumnos").each(function () {
                                if ($(this).is(':checked')) {
                                    contadorActivo++;
                                    $('#numeroAlumnos').val(contadorActivo);
                                }


                            });
                        });
                        c++;

                    });
                    $('#numeroAlumnos').val(contadorActivo);


                }
            });

        }







        function getComboGrupo(ciclo, especialidad, curso, combo) {

            $.ajax({
                url: "/Admin/Notificacion/ComboGrupo",
                data: {
                    ciclo:ciclo,
                    IDEspecialidad: especialidad,
                    curso:curso


                },
                dataType: "json",
                type: "POST",
                error: function (xhr, ajaxOptions, thrownError, request) {
                    $("#" + combo).html('');

                    alert(xhr.status);
                    alert(thrownError);
                },
                success: function (cmbGrupo) {
                    var items = "";
                   
                    for (var i = 0; i < cmbGrupo.length; i++) {
                        items += "<option value=\"" + cmbGrupo[i].IDGrupo + "\">" + cmbGrupo[i].Nombre + "</option>";
                        
                    }
                    $("#" + combo).html(items);
                    d3.select("#ListGrupoOrigen option[value='all']").raise();

                }
            });
        }
        function getComboCursos(IDE,combo) {
            $.ajax({
                url: "/Admin/Notificacion/ComboCursos",
                data: {
                    IDEspecialidad: IDE

                },
                dataType: "json",
                type: "POST",
                error: function (xhr, ajaxOptions, thrownError, request) {
                    $("#" + combo).html('');

                    alert(xhr.status);
                    alert(thrownError);
                },
                success: function (cmbCursos) {
                    var items = "";
                    for (var i = 0; i < cmbCursos.length; i++) {
                        items += "<option value=\"" + cmbCursos[i].IDCurso + "\">" + cmbCursos[i].Descripcion + "</option>";
                    }
                    $("#" + combo).html(items);
                    d3.select("#ListCursosOrigen option[value='all']").raise();
                }
            });
        }
        function getComboEspecialidad(IDM,combo) {
            $.ajax({
                url: "/Admin/Notificacion/ComboEspecialidad",
                data: {
                    IDModalidad: IDM

                },
                dataType: "json",
                type: "POST",
                error: function (xhr, ajaxOptions, thrownError, request) {
                    $("#" + combo).html('');

                    alert(xhr.status);
                    alert(thrownError);
                },
                success: function (cmbEspecialidad) {
                    var items = "";
                    for (var i = 0; i < cmbEspecialidad.length; i++) {
                        items += "<option value=\"" + cmbEspecialidad[i].id_especialidad + "\">" + cmbEspecialidad[i].descripcion + "</option>";
                    }
                    $("#" + combo).html(items);
                    d3.select("#ListEspecialidadOrigen option[value='all']").raise();
                }
            });
        }
        function getComboModalidad(IDP,combo) {

            $.ajax({
                url: "/Admin/Notificacion/ComboModalidad",
                        data: {
                            idplanEstudio:IDP

                        },
                        dataType: "json",
                        type: "POST",
                        error: function (xhr, ajaxOptions, thrownError, request) {
                            $("#" + combo).html('');

                            alert(xhr.status);
                            alert(thrownError);
                        },
                        success: function (cmbModalidad) {
                            var items = "";
                            for (var i = 0; i < cmbModalidad.length; i++) {
                                items += "<option value=\"" + cmbModalidad[i].IDModalidad + "\">" + cmbModalidad[i].Descripcion + "</option>";
                            }
                            $("#" + combo).html(items);
                            d3.select("#ListModalidadOrigen option[value='all']").raise();
                        }
                    });
        }

        $(document).ready(function() {
            $('#example').DataTable({
	        "bSort" : false,
	        "bAutoWidth" : false,
	        "aLengthMenu" : [
	        [10,25, 50, 100, 200, -1], [10, 25, 50, 100, 200, "All"]
	        ],
	        "iDisplayLength" : 10
            });

            $('a.delete').live('click', function (e) {
                e.preventDefault();
                if (confirm("¿Confirmar eliminación?") == false) return;
                var url = $(this).attr('href');
                $.ajax({
                    url: url,
                    type: 'POST',
                    dataType: 'json',
                    success: function (result) { location.reload(true); },
                    error: function () {
                        $('#Error').html('<h3>Ocurrio un error al eliminar este registro<h3>');
                        $('#Error').css("display", "block");
                        $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                        $('#Error').css("display", "block");
                    }
                });
            });

        });

       jQuery(document).ready(function () {
           var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });

    </script>
}





