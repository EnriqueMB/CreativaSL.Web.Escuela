@model CreativaSL.Web.Escuela.Models.CatTutorModels
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section featured
{

    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Ofelia Narvaez Rincón<small>   Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Nuevo Tutor</div>
                    </div>
                    @using (Html.BeginForm("Edit", "CatTutor", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.IDPersona)

                        <div class="portlet-body form">
                            <h3 class="form-section">Información de tutor</h3>

                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Nombre Tutor<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.Nombre, new { id = "nombre", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Nombre)
                                            <span class="help-bolck">Ingrese el Nombre</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Apellido Paterno<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.ApPaterno, new { id = "apPaterno", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.ApPaterno)
                                            <span class="help-bolck">Ingrese el apellido paterno</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Apellido Materno<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.ApMaterno, new { id = "apMaterno", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.ApMaterno)
                                            <span class="help-bolck">Ingrese el apellido materno</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Correo<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.Correo, new { id = "correo", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Correo)
                                            <span class="help-bolck">Ingrese el correo</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Teléfono<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.Telefono, new { id = "telefono", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Telefono)
                                            <span class="help-bolck">Ingrese el teléfono</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Dirección<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.Direccion, new { id = "direccion", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Direccion)
                                            <span class="help-bolck">Ingrese la dirección</span>
                                        </div>
                                    </div>
                                </div>
                            </div>



                           
                            <div class="row-fluid">

                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Observaciones<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.Observaciones, new { id = "observaciones", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.Observaciones)
                                        </div>
                                    </div>
                                    <span class="help-block">Ingrese observaciones</span>
                                </div>

                            </div>

                            <div class="form-actions">
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Index","CatTutor")" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <script>

        document.getElementById('passUser').value = "";
        document.getElementById('clvUser').value = "";


        jQuery(document).ready(function () {
            var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            try
            {
                $("input[type='text']").each(function ()
                {
                    $(this).attr("autocomplete", "off");
                    $(this).val = "";
                });
            }
            catch (e)
            {
            }
        });
        jQuery.validator.methods["date"] = function (value, element) { return true; }
    </script>

}




