@model CreativaSL.Web.Escuela.Models.ExamenModels
@{
    ViewBag.Title = "Crear Examen";
    Layout = "~/Areas/Profesor/Views/Shared/_Layout.cshtml";
}

@section featured
{
    @{
        var message = TempData["message"] ?? string.Empty;
        var typemessage = TempData["typemessage"] ?? string.Empty;
    }
    <div class="page-content">
        <div id="Error" class="error message" style="display: none">
            <h3></h3>
        </div>
        <div id="Success" class="success message" style="display: none">
            <h3></h3>
        </div>

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">Ofelia Narvaez Rincón<small>   Administración</small></h3>
                </div>
            </div>
            <div class="tab-pane">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-reorder"></i>Nuevo Examen</div>
                    </div>

                    @using (Html.BeginForm("CreateExamen", "CatMateria", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.IDAsignatura)
                        @Html.HiddenFor(model => model.IDExamen)

                        <div class="portlet-body form">
                            <h3 class="form-section">Información del Examen</h3>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Nombre Examen<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextBoxFor(model => model.NombreExamen, new { id = "NombreExamen", @class = "span12 m-wrap" })
                                            @Html.ValidationMessageFor(model => model.NombreExamen)
                                        </div>
                                    </div>
                                    <span class="help-block">Ingrese el nombre de la tarea</span>
                                </div>
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Fecha de Examen<span class="required"> *</span></label>
                                        <div class="controls">
                                            <div id="datetimepicker1" class="input-append date calendar">
                                                @Html.TextBoxFor(model => model.FechaExamen, "{0:dd/MM/yyyy HH:mm:ss}", new { id = "FechaExamen", @class = "span12 m-wrap", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.FechaExamen)
                                                <span class="add-on"><i data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span>
                                            </div>
                                            <span class="help-block">Ingrese la fecha</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span6">
                                    <div class="control-group">
                                        <label class="control-label">Fecha de Envio<span class="required"> *</span></label>
                                        <div class="controls">
                                            <div id="datetimepicker2" class="input-append date calendar">
                                                @Html.TextBoxFor(model => model.FechaEnvio, "{0:dd/MM/yyyy HH:mm:ss}", new { id = "FechaEnvio", @class = "span12 m-wrap", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(model => model.FechaEnvio)
                                                <span class="add-on"><i data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span>
                                            </div>
                                            <span class="help-block">Ingrese la fecha</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="control-group">
                                        <label class="control-label">Descripción Examen<span class="required"> *</span></label>
                                        <div class="controls">
                                            @Html.TextAreaFor(model => model.Descripcion, new { id = "Descripcion", @class = "span12 m-wrap", @rows = "8" })
                                            @Html.ValidationMessageFor(model => model.Descripcion)
                                        </div>
                                    </div>
                                    <span class="help-block">Ingrese descripción del examen</span>
                                </div>
                            </div>
                            <div class="form-actions">
                                @{string id = Model.IDAsignatura; }
                                <input type="submit" value="Guardar" class="btn green">
                                <a href="@Url.Action("Examen", "CatMateria", new { id = id})" class="btn btn-default red"><i class="icon-prev"></i>Cancelar</a>
                            </div>
                        </div>
                                    }
                </div>
            </div>
        </div>
    </div>
    <script>
            jQuery(document).ready(function () {
                var message = '@message';
            var typemessage = '@typemessage';

            if (typemessage && message) {
                if (typemessage == '1') {
                    $('#Success').html('<h3>' + message + '<h3>');
                    $('#Success').css("display", "block");
                    $('#Success').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Success').css("display", "block");
                }
                else if (typemessage == '2') {
                    $('#Error').html('<h3>' + message + '<h3>');
                    $('#Error').css("display", "block");
                    $('#Error').delay(400).slideDown(400).delay(2000).slideUp(400);
                    $('#Error').css("display", "block");
                }
            }
        });
            jQuery.validator.methods["date"] = function (value, element) { return true; }
    </script>
}




